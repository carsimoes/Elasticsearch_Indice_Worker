{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ElasticSearchSettings": {
    "Uri": "http://localhost:9200",

    "Index": {
      "Inventory": {
        "Id": "inventory-worker",
        "MaximumAgeInMonths": 6
      },
      "LocationMovements": {
        "Id": "location-movements",
        "MaximumAgeInMonths": 12,
        "TenantID": 1
      }
    },

    "Indices": "inventory-worker, location-movements"
  }
}
